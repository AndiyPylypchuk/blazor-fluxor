@page "/counter"
@using Blazor.Fluxor
@using Store.Counter
@using Store.Counter.IncrementCounter
@inject IDispatcher Dispatcher
@inject IStateProvider<CounterState> CounterState

<h1>Counter</h1>

<p>This page <strong>has</strong> been Fluxorized</p>

<p>Current count: @CounterState().Value</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions { 
   async void IncrementCount()
   {
       await Dispatcher.DispatchAsync(new IncrementCounterAction());
   }
}
