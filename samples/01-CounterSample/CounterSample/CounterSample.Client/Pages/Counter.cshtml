@page "/counter"
@using Blazor.Fluxor
@using Store.Counter
@using Store.Counter.IncrementCounter
@inject IStore Store
@inject IFeature<CounterState> Feature

<h1>Counter</h1>

<p>This page <strong>has</strong> been Fluxorized</p>

<p>Current count: @Feature.State.Value</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
   async void IncrementCount()
   {
       await Store.DispatchAsync(new IncrementCounterAction());
   }
}
